<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/sdvAvatar"
            android:padding="@dimen/spacing_tiny"
            app:roundAsCircle="true"
            android:layout_width="@dimen/spacing_giant"
            android:layout_height="@dimen/spacing_giant"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clInfoFollower"
            android:layout_marginLeft="@dimen/spacing_small"
            app:layout_constraintStart_toEndOf="@id/sdvAvatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/tvLogin"
                android:textColor="@color/black"
                android:text="dasd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tvNodeID"
                android:textColor="@color/blue_bright"
                app:layout_constraintTop_toBottomOf="@+id/tvLogin"
                android:text="ewqeq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
            app:layout_constraintTop_toBottomOf="@id/sdvAvatar"
            android:layout_marginHorizontal="@dimen/spacing_tiny"
            android:background="@color/gray_80"
            android:layout_width="match_parent"
            android:layout_height="1dp">

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>