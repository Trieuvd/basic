<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <TextView
            android:id="@+id/tvTitleTerm"
            android:text="@string/title_term"
            android:textSize="@dimen/font_large"
            android:textStyle="bold"
            android:padding="@dimen/spacing_tiny"
            android:textColor="@color/green_bright"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ScrollView
            android:id="@+id/svContentTerm"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleTerm"
            app:layout_constraintBottom_toTopOf="@+id/tvAgree"
            android:padding="@dimen/spacing_tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tvContentTerm"
                    android:text="@string/term_of_user"
                    android:textSize="@dimen/font_normal"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
            android:id="@+id/tvAgree"
            android:text="@string/tvAgree_text"
            android:textSize="@dimen/font_small"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>