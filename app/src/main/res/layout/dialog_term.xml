<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
    <TextView
            android:id="@+id/tvTitleTerm"
            android:text="Term of Use"
            android:textSize="25dp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#027117"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <ScrollView
            android:id="@+id/svContentTerm"
            app:layout_constrainedHeight="true"
            app:layout_constraintTop_toBottomOf="@+id/tvTitleTerm"
            app:layout_constraintBottom_toTopOf="@+id/tvAgree"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/tvContentTerm"
                    android:text="@string/term_of_user"
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
            android:id="@+id/tvAgree"
            android:text="Agree"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>